{{header }}{{column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form" data-toggle="tooltip" title="{{button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{cancel }}" data-toggle="tooltip" title="{{button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
      <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
      </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{action }}" method="post" enctype="multipart/form-data" id="form" class="form-horizontal">
          <ul class="nav nav-tabs">
            <li class="active"><a href="#tab-general" data-toggle="tab">{{tab_general }}</a></li>
            <li><a href="#tab-social" data-toggle="tab">{{tab_social }}</a></li>
          </ul>
          <div class="tab-content">
            <div class="tab-pane active" id="tab-general">
              <div class="form-group">
                <label class="col-sm-2 control-label" for="input-status">{{entry_status }}</label>
                <div class="col-sm-10">
                  <select name="module_social_login_status" id="input-status" class="form-control">
                    <option value="1"{{module_social_login_status ? ' selected="selected"' : '' }}>{{text_enabled }}</option>
                    <option value="0"{{module_social_login_status ? '' : ' selected="selected"' }}>{{text_disabled }}</option>
                  </select>
                </div>
              </div>
            </div>
            <div class="tab-pane" id="tab-social">
              <div class="col-sm-12">
                <h2>{{text_facebook }}</h2>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-status">{{entry_status }}</label>
                  <div class="col-sm-10">
                    <select name="module_social_login_facebook_status" id="input-status" class="form-control">
                      <option value="1"{{module_social_login_facebook_status ? ' selected="selected"' : '' }}>{{text_enabled }}</option>
                      <option value="0"{{module_social_login_facebook_status ? '' : ' selected="selected"' }}>{{text_disabled }}</option>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-app-id">{{text_app_id }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="module_social_login_facebook_app_id" value="{{module_social_login_facebook_app_id }}" placeholder="{{text_app_id }}" id="input-sl-facebook-app-id" class="form-control" />
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-app-secret">{{text_app_secret }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="module_social_login_facebook_secret" value="{{module_social_login_facebook_secret }}" placeholder="{{text_app_secret }}" id="input-sl-facebook-secret" class="form-control" />
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-app-secret">{{text_app_redirect }}</label>
                  <div class="col-sm-10">
                    <input type="text" name="module_social_login_facebook_callback" value="{{module_social_login_facebook_callback }}" placeholder="{{text_app_redirect }}" id="input-sl-facebook-callback" class="form-control" readonly/>
                  </div>
                </div>
                <div class="form-group">
                  <label class="col-sm-2 control-label" for="input-app-secret">{{text_image }}</label>
                  <div class="col-sm-10">
                    <a href="" id="thumb-image" data-toggle="image" class="img-thumbnail"><img src="{{ thumb_facebook }}" alt="" title="" data-placeholder="{{ placeholder }}"/></a> <input type="hidden" name="module_social_login_facebook_image" value="{{ module_social_login_facebook_image }}" id="input-image"/>
                  </div>
                </div>
                <fieldset>
                  <h2>{{text_google }}</h2>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-status">{{entry_status }}</label>
                    <div class="col-sm-10">
                      <select name="module_social_login_google_status" id="input-status" class="form-control">
                        <option value="1"{{module_social_login_google_status ? ' selected="selected"' : '' }}>{{text_enabled }}</option>
                        <option value="0"{{module_social_login_google_status ? '' : ' selected="selected"' }}>{{text_disabled }}</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-app-id">{{text_client_id }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="module_social_login_google_client_id" value="{{module_social_login_google_client_id }}" placeholder="{{text_client_id }}" id="input-sl-google-client-id" class="form-control" />
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-app-secret">{{text_client_secret }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="module_social_login_google_secret" value="{{module_social_login_google_secret }}" placeholder="{{text_client_secret }}" id="input-sl-google-secret" class="form-control" />
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-app-secret">{{text_app_redirect }}</label>
                    <div class="col-sm-10">
                      <input type="text" name="module_social_login_google_callback" value="{{module_social_login_google_callback }}" placeholder="{{text_app_redirect }}" id="input-sl-google-callback" class="form-control" readonly/>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label" for="input-app-secret">{{text_image }}</label>
                    <div class="col-sm-10">
                      <a href="" id="thumb-image-google" data-toggle="image" class="img-thumbnail"><img src="{{ thumb_google }}" alt="" title="" data-placeholder="{{ placeholder }}"/></a> <input type="hidden" name="module_social_login_google_image" value="{{ module_social_login_google_image }}" id="input-image-google"/>
                    </div>
                  </div>
                </fieldset>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{footer }}