<div class="pricing-subscription ">
    <div class="bg-gradient">
        <div class="container">
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
            {% if success %}
                <div class="alert alert-success alert-dismissible"><i
                            class="fa fa-check-circle"></i> {{ success }}</div>
            {% endif %}

            <h4 class="f-35 text-center font-weight-bold mb-5">Membership Plans</h4>
            <form id="form-subscription" action="{{ action_subscribe }}" method="post">
                <div class="row m-auto text-center w-75 justify-content-center">
                    {% for plan in plans %}
                        <div class="col-7 princing-item mb-5">
                            <div class="pricing-divider d-flex align-items-center">

                                <div class="card-body bg-white mt-0 shadow">
                                    <input type="radio" name="radioPlan" value="{{ plan.stripe_plan_id }}" data-id="{{ plan.plan_id }}" class="icheck-input checkPlan" />
                                </div>
                                <div class="card-text">
                                <h3 class="text-light plan-name">{{ plan.name }}</h3>
                                <h4 class="my-0 display-2 text-light font-weight-normal mb-3 plan-amount"><span
                                            class="h3"></span>
                                    Monthly rental is {{ plan.amount }} plus a % of each product sold
                                    <span class="h5"></span>
                                </h4>
                                </div>

                                {#<svg class='pricing-divider-img' enable-background='new 0 0 300 100' height='100px'#}
                                     {#id='Layer_1' preserveAspectRatio='none' version='1.1' viewBox='0 0 300 100'#}
