<section id="account-account" class="register update-profile main-dashboard" style="background: #F3F3F3;">
    <div class="container">
        <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endfor %}
        </ul>
        <div class="row">
            <div class="col-12">
                <div class="pb-5">
                    <div class="form-signin card p-4">

                        <div id="account-account" class="container">
                            {% if success %}
                                <div class="alert alert-success alert-dismissible"><i
                                            class="fa fa-check-circle"></i> {{ success }}</div>
                            {% endif %}
                            <h4 class="f-35 text-center font-weight-bold">Membership Plans</h4>
                            <hr>
{#                            <form id="form-subscription" action="{{ action_subscribe }}" method="post">#}
                            <form id="form-subscription" action="{{ action_subscribe }}" method="post">
                            <div class="row">
                                    {% for plan in plans %}
                                        <div class="col-sm-4">
                                            <h3 class="f-20 font-weight-bold text-uppercase text-center">{{ plan.name }}</h3>
                                            <input type="radio" name="radioPlan" id="{{ plan.plan_id }}"
                                                   value="{{ plan.stripe_plan_id }}" class="icheck-input checkPlan">{{ plan.name }}

                                            <br>
                                            <b>${{ plan.amount }}</b>
                                        </div>
                                    {% endfor %}

                                    <div class="group">
                                        <label>
                                            <span>Name</span>
                                            <input id="name" name="sellerName" class="field" placeholder="Jane Doe"/>
                                        </label>
                                        <label>
                                            <span>Card</span>
                                            <div id="card-element" class="field"></div>
                                        </label>
                                    </div>

                                    <input type="hidden" name="stripe_token" id="stripe_token" />
                                    <input type="hidden" name="stripe_card" id="stripe_card">
                                    <input type="hidden" name="stripe_cvc" id="stripe_cvc">
                                    <input type="hidden" name="stripe_expdate" id="stripe_expdate">

                                    <input type="submit" value="Pay" class="btn btn-primary w-100 bg-success my-3 border-0 custom-btn">
                                    <div class="outcome">
                                        <div class="error"></div>
                                        <div class="success">
                                            Success! Your Stripe token is <span class="token"></span>
                                        </div>
                                    </div>
                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
