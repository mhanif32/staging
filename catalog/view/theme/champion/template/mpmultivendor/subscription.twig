                          {#fill='#FFFFFF'></path>#}
                {#</svg>#}
                            </div>

                        </div>
                    {% endfor %}
                </div>

                <div class="row m-auto text-center justify-content-center w-75">
                    <div class="col-7">
                        <div class="group">
                            <label>
                                <span>Name</span>
                                <input id="name" name="sellerName" class="field" placeholder="Jane Doe"/>
                            </label>
                            <label>
                                <span>Card</span>
                                <div id="card-element" class="field"></div>
                            </label>
