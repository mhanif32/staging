<div class="mpseller-wrap" >
  {#<img src="{{ banner }}" alt="" title="" class="img-fluid"/>#}
  <div style="background: url({{ banner }}) no-repeat center; background-size: cover; min-height: 300px;">
  </div>
    <div class="mp-seller-info">
      <div class="row">
        <div class="col-sm-6">
          {% if display_seller_image %}
          <div class="seller-img w-40">
            <img src="{{ image }}" alt="" title="" class="img-fluid rounded-circle"/>
          </div>
          {% endif %}
          <div class="seller-detail w-100 text-left">
            <ul class="list-unstyled pl-2">
              {% if display_seller_name %}
              <li><i class="fa fa-user"></i> {{ store_owner }}</li>
              {% endif %}

              {% if display_seller_email %}
              <li><i class="fa fa-envelope"></i> {{ email }}</li>
              {% endif %}
          
              {% if display_seller_telephone %}
              <li><i class="fa fa-phone"></i> {{ telephone }}</li>
              {% endif %}

              {% if display_seller_address %}
              <li><i class="fa fa-map-marker"></i> {{ address }}</li>
              {% endif %}

            </ul>
          </div>
        </div>
        <div class="col-sm-6">
          {% if information_sections %}
          <ul class="list-unstyled text-right mv-policy">
            {% for information_section in information_sections %}
            <li><a href="{{ information_section.href }}">{{ information_section.title }}</a></li>
            {% endfor %}
          </ul>
          {% endif %}
        </div>
      </div>
    </div>
</div>