{{ header }}
<section id="account-edit" class="register update-profile" style="background: #F3F3F3;">
    <div class="container">
        <div class="row justify-content-center">
            {#            {{ profile_column_left }}#}
            <div class="col-12 col-md-7 col-lg-7">
                <div class="py-5">
                    <div class="form-signin card py-3 px-2">
                        <div id="delivery-info" class="container">
                            <div class="row">
                                <div id="content" class="col-sm-12">
                                    {% if success %}
                                        <div class="alert alert-success alert-dismissible"><i
                                                    class="fa fa-check-circle"></i> {{ success }}</div>
                                    {% endif %}
                                    <div class="justify-content-between align-items-center row mx-0">
                                        <h4 class="f-18 font-weight-bold text-uppercase mb-3">Update Delivery Partner
                                            Info</h4>
                                        <div class="my-auto">
                                            <button type="submit" form="form-delivery" data-toggle="tooltip"
                                                    title="Save" class="btn btn-primary"><i
                                                        class="fa fa-save"></i> Save
                                            </button>
                                            <a href='javascript:history.back(1);' data-toggle="tooltip" title="Cancel"
                                               class="btn btn-default"><i class="fa fa-reply"></i> Cancel</a>
                                        </div>
                                    </div>
                                    <br>

                                    <form action="{{ action }}" method="post" enctype="multipart/form-data"
                                          id="form-delivery" class="form-horizontal">
                                        <ul id="tabs" class="nav nav-tabs htabs font-weight-bold pb-2 mb-2">
                                            <li><a href="#tab-documents" data-toggle="tab" class="active">General</a>
                                            </li>
                                            <li><a href="#tab-location" data-toggle="tab">Your Delivery Areas</a></li>
                                        </ul>

                                        <div class="tab-content">
                                            <div class="tab-pane  col-md-9 pl-md-0 active" id="tab-documents">
                                                <div class="form-group">
                                                    <label for="inputType" class="d-block">Please select Delivery Coverage Area</label>

                                                    <select name="delivery_type" id="select-delivery_type" class="form-control">
                                                        <option value=""> --- Please Select ---</option>
                                                        <option value="1" {% if delivery_type == 1 %} selected="selected" {% endif %} >Within City</option>
                                                        <option value="2" {% if delivery_type == 2 %} selected="selected" {% endif %} >Within State</option>
                                                        <option value="3" {% if delivery_type == 3 %} selected="selected" {% endif %} >Within Country</option>
                                                    </select>
                                                </div>

                                                <div class="form-group">
                                                    <label for="inputType" class="d-block">Vehicle Type</label>

                                                    <input type="radio" name="vehicle_type" value="1"
                                                           class="icheck-input" {% if vehicle_type == '1' %} checked {% endif %}>
                                                    <label class="mr-5">Two Wheeler</label>

                                                    <input type="radio" name="vehicle_type" value="2"
                                                           class="icheck-input" {% if vehicle_type == '2' %} checked {% endif %}>
                                                    <label>Four Wheeler</label>
                                                </div>

                                                <div class="form-group">
                                                    <label class="control-label">ID Proof</label>
                                                    <input type="file" class="form-control" name="id_proof"
                                                           id="input-id_proof">
                                                    {% if error_filename_id_proof or error_filetype_id_proof or error_filesize_id_proof %}
                                                        <div class="text-danger">
                                                            {% if error_filename_id_proof %}
                                                                {{ error_filename_id_proof }}
                                                            {% elseif error_filetype_id_proof %}
                                                                {{ error_filetype_id_proof }}
                                                            {% elseif error_filesize_id_proof %}
                                                                {{ error_filesize_id_proof }}
                                                            {% endif %}
                                                        </div>
                                                    {% endif %}
                                                    {% if link_id_proof %}
                                                        <a href="{{ link_id_proof }}" class="btn btn-primary my-3"
                                                           target="_blank">Click here to view Id Proof</a>
                                                    {% endif %}
                                                </div>

                                                <div class="form-group">
                                                    <label class="control-label">Address Proof</label>
                                                    <input type="file" class="form-control" name="address_proof"
                                                           id="input-address_proof">
                                                    {% if error_filename_address_proof or error_filetype_address_proof or error_filesize_address_proof %}
                                                        <div class="text-danger">
                                                            {% if error_filename_address_proof %}
                                                                {{ error_filename_address_proof }}
                                                            {% elseif error_filetype_address_proof %}
                                                                {{ error_filetype_address_proof }}
                                                            {% elseif error_filesize_address_proof %}
                                                                {{ error_filesize_address_proof }}
                                                            {% endif %}
                                                        </div>
                                                    {% endif %}
                                                    {% if link_address_proof %}
                                                        <a href="{{ link_address_proof }}" class="btn btn-primary my-3"
                                                           target="_blank">Click here to view Address Proof</a>
                                                    {% endif %}
                                                </div>

                                                <div class="form-group">
                                                    <label class="control-label">Drivers License</label>
                                                    <input type="file" class="form-control" name="travel_license"
                                                           id="input-travel_license">
                                                    {% if error_filename_travel_license or error_filetype_travel_license or error_filesize_travel_license %}
                                                        <div class="text-danger">
                                                            {% if error_filename_travel_license %}
                                                                {{ error_filename_travel_license }}
                                                            {% elseif error_filetype_travel_license %}
                                                                {{ error_filetype_travel_license }}
                                                            {% elseif error_filesize_travel_license %}
                                                                {{ error_filesize_travel_license }}
                                                            {% endif %}
                                                        </div>
                                                    {% endif %}
                                                    {% if link_travel_license %}
                                                        <a href="{{ link_travel_license }}" class="btn btn-primary my-3"
                                                           target="_blank">Click here to view Drivers License</a>
                                                    {% endif %}
                                                </div>

                                                <div class="form-group">
                                                    <label class="control-label">Vehicle Insurance</label>
                                                    <input type="file" class="form-control" name="vehicle_insurance"
                                                           id="input-vehicle_insurance">
                                                    {% if error_filename_vehicle_insurance or error_filetype_vehicle_insurance or error_filesize_vehicle_insurance %}
                                                        <div class="text-danger">
                                                            {% if error_filename_vehicle_insurance %}
                                                                {{ error_filename_vehicle_insurance }}
                                                            {% elseif error_filetype_vehicle_insurance %}
                                                                {{ error_filetype_vehicle_insurance }}
                                                            {% elseif error_filesize_vehicle_insurance %}
                                                                {{ error_filesize_vehicle_insurance }}
                                                            {% endif %}
                                                        </div>
                                                    {% endif %}
                                                    {% if link_vehicle_insurance %}
                                                        <a href="{{ link_vehicle_insurance }}" class="btn btn-primary my-3"
                                                           target="_blank">Click here to view Vehicle Insurance</a>
                                                    {% endif %}
                                                </div>
                                            </div>

                                            <div class="tab-pane col-md-11 pl-md-0" id="tab-location">
                                                <table id="delivery" class="table table-striped table-hover list">
                                                    <thead>
                                                    <tr>
                                                        <td class="text-left border-0">Country</td>
                                                        <td class="text-left border-0">Zone</td>
                                                        <td class="text-left border-0">Area</td>
{#                                                        <td class="text-left">Time <small>(in hrs)</small></td>#}
{#                                                        <td class="text-left">Per Hour Rate</td>#}
                                                        <td class="text-left border-0"></td>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {% set delivery_row = 0 %}
                                                    {% for deliveryInfo in deliveryInfos %}
                                                        <tr id="delivery-row{{ delivery_row }}">
                                                            <td class="text-left">
                                                                <select name="delivery_info[{{ delivery_row }}][country_id]"
                                                                        class="form-control countrySelect"
                                                                        data-id="{{ delivery_row }}">
                                                                    <option value="">Select</option>
                                                                    {% for country in countries %}
                                                                        {% if deliveryInfo.country_id == country.country_id %}
                                                                            <option value="{{ country.country_id }}"
                                                                                    selected="selected">{{ country.name }}</option>
                                                                        {% else %}
                                                                            <option value="{{ country.country_id }}">{{ country.name }}</option>
                                                                        {% endif %}
                                                                    {% endfor %}
                                                                </select>
                                                            </td>

                                                            <td class="text-left">
                                                                <select name="delivery_info[{{ delivery_row }}][zone_id]"
                                                                        class="form-control zoneSelect"
                                                                        data-id="{{ delivery_row }}">
                                                                    {% for zone in deliveryInfo.zones %}
                                                                        {% if deliveryInfo.zone_id == zone.zone_id %}
                                                                            <option value="{{ zone.zone_id }}"
                                                                                    selected="selected">{{ zone.name }}</option>
                                                                        {% else %}
                                                                            <option value="{{ zone.zone_id }}">{{ zone.name }}</option>
                                                                        {% endif %}
                                                                    {% endfor %}
                                                                </select>
                                                            </td>

                                                            <td class="text-left">
                                                                <select name="delivery_info[{{ delivery_row }}][area_id]"
                                                                        class="form-control areaSelect"
                                                                        data-id="{{ delivery_row }}">
                                                                    {% for area in deliveryInfo.areas %}
                                                                        {% if deliveryInfo.area_id == area.area_id %}
                                                                            <option value="{{ area.area_id }}"
                                                                                    selected="selected">{{ area.name }}</option>
                                                                        {% else %}
                                                                            <option value="{{ area.area_id }}">{{ area.name }}</option>
                                                                        {% endif %}
                                                                    {% endfor %}
                                                                </select>
                                                            </td>

{#                                                            <td class="text-left">#}
{#                                                                <input name="delivery_info[{{ delivery_row }}][days]"#}
{#                                                                       class="form-control"#}
{#                                                                       value="{{ deliveryInfo.days }}"#}
{#                                                                       size="1">#}
{#                                                            </td>#}

{#                                                            <td class="text-left">#}
{#                                                                <b>{{ deliveryInfo.rate_per_hour }}</b>#}
{#                                                            </td>#}

                                                            <td class="text-left">
                                                                <button type="button"
                                                                        onclick="$('#delivery-row{{ delivery_row }}').remove();"
                                                                        data-toggle="tooltip"
                                                                        title="{{ button_remove }}"
                                                                        class="btn btn-danger"><i
                                                                            class="fa fa-minus-circle"></i>
                                                                </button>
                                                            </td>
                                                        </tr>
                                                        {% set delivery_row = delivery_row + 1 %}
                                                    {% endfor %}
                                                    </tbody>
                                                    <tfoot>
                                                    <tr>
                                                        <td colspan="3"></td>
                                                        <td class="text-left">
                                                            <button type="button" onclick="addDeliveryInfo();"
                                                                    data-toggle="tooltip"
                                                                    class="btn btn-primary"><i
                                                                        class="fa fa-plus-circle"></i></button>
                                                        </td>
                                                    </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript"><!--
    var delivery_row = {{ delivery_row }};

    function addDeliveryInfo() {
        html = '<tr id="delivery-row' + delivery_row + '">';

        html += ' <td class="text-left"><select name="delivery_info[' + delivery_row + '][country_id]" class="form-control countrySelect" data-id="' + delivery_row + '">';
        html += ' <option value="">Select</option>';
        {% for country in countries %}
        html += '      <option value="{{ country.country_id }}">{{ country.name|escape('js') }}</option>';
        {% endfor %}
        html += '  </select></td>';

        html += '  <td class="text-left"><select name="delivery_info[' + delivery_row + '][zone_id]" class="form-control zoneSelect" data-id="' + delivery_row + '">';
        html += '  </select></td>';

        html += '  <td class="text-left"><select name="delivery_info[' + delivery_row + '][area_id]" class="form-control areaSelect" data-id="' + delivery_row + '">';
        html += '  </select></td>';

        //html += '  <td class="text-left"><input type="text" name="delivery_info[' + delivery_row + '][days]" value="" class="form-control" size="1"/></td>';

        // html += '  <td class="text-left"></td>';

        html += '  <td class="text-left"><button type="button" onclick="$(\'#delivery-row' + delivery_row + '\').remove();" data-toggle="tooltip" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
        html += '</tr>';

        $('#delivery tbody').append(html);
        delivery_row++;
    }

    //--></script>

<script type="text/javascript"><!--
    $(document).on('change', 'select.countrySelect', function () {
        var countryId = $(this).children("option:selected").val();
        var dataId = $(this).attr('data-id');
        $.ajax({
            url: 'index.php?route=account/account/country&country_id=' + countryId,
            dataType: 'json',
            beforeSend: function () {
                $('select[name=\'country_id\']').prop('disabled', true);
            },
            complete: function () {
                $('select[name=\'country_id\']').prop('disabled', false);
            },
            success: function (json) {
                if (json['postcode_required'] == '1') {
                    $('input[name=\'postcode\']').parent().parent().addClass('required');
                } else {
                    $('input[name=\'postcode\']').parent().parent().removeClass('required');
                }

                html = '<option value="">{{ text_select }}</option>';

                if (json['zone'] && json['zone'] != '') {
                    for (i = 0; i < json['zone'].length; i++) {
                        html += '<option value="' + json['zone'][i]['zone_id'] + '"';

                        if (json['zone'][i]['zone_id'] == '{{ zone_id }}') {
                            html += ' selected="selected"';
                        }

                        html += '>' + json['zone'][i]['name'] + '</option>';
                    }
                } else {
                    html += '<option value="0" selected="selected">{{ text_none }}</option>';
                }

                $('select[name=\'delivery_info[' + dataId + '][zone_id]\']').html(html);
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
            }
        });
    });

    $('select[name=\'country_id\']').trigger('change');
    //--></script>

