{{ header }}
<section id="account-edit" class="register update-profile" style="background: #F3F3F3;">
    <div class="container">
        <div class="row">
            {{ profile_column_left }}
            <div class="col-12 col-md-9 col-lg-9">
                <div class="py-5">
                    <div class="form-signin card py-4 px-2">
                        <div id="delivery-info" class="container">
                            <div class="row">
                                <div id="content" class="col-sm-12">
                                    <h4 class="f-20 font-weight-bold text-uppercase mb-3">Add Delivery Locations</h4>
                                    <div class="my-auto">
                                        <button type="submit" form="form-delivery" data-toggle="tooltip"
                                                title="Save" class="btn btn-primary"><i
                                                    class="fa fa-save"></i></button>
                                        <a href="{{ cancel }}" data-toggle="tooltip" title="Cancel"
                                           class="btn btn-default"><i class="fa fa-reply"></i></a>
                                    </div>

                                    <form action="{{ action }}" method="post" enctype="multipart/form-data"
                                          id="form-delivery" class="form-horizontal">
                                        <table id="delivery" class="table table-striped table-hover list">
                                            <thead>
                                            <tr>
                                                <td class="text-left">Country</td>
                                                <td class="text-left">Zone</td>
                                                <td class="text-left">Time <small>(in days)</small></td>
                                                <td class="text-left">Rate/Charges</td>
                                                <td></td>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% set delivery_row = 0 %}
                                            {% for deliveryInfo in deliveryInfos %}
                                                <tr id="delivery-row{{ delivery_row }}">
                                                    <td class="text-left">
                                                        <select name="delivery_info[{{ delivery_row }}][country_id]"
                                                                class="form-control countrySelect"
                                                                data-id="{{ delivery_row }}">
                                                            <option value="">Select</option>
                                                            {% for country in countries %}
                                                                {% if deliveryInfo.country_id == country.country_id %}
                                                                    <option value="{{ country.country_id }}"
                                                                            selected="selected">{{ country.name }}</option>
                                                                {% else %}
                                                                    <option value="{{ country.country_id }}">{{ country.name }}</option>
                                                                {% endif %}
                                                            {% endfor %}
                                                        </select>
                                                    </td>

                                                    <td class="text-left">
                                                        <select name="delivery_info[{{ delivery_row }}][zone_id]"
                                                                class="form-control zoneSelect">
                                                            {% for zone in deliveryInfo.zones %}
                                                                {% if deliveryInfo.zone_id == zone.zone_id %}
                                                                    <option value="{{ zone.zone_id }}"
                                                                            selected="selected">{{ zone.name }}</option>
                                                                {% else %}
                                                                    <option value="{{ zone.zone_id }}">{{ zone.name }}</option>
                                                                {% endif %}
                                                            {% endfor %}
                                                        </select>
                                                    </td>

                                                    <td class="text-left">
                                                        <input name="delivery_info[{{ delivery_row }}][days]"
                                                               class="form-control" value="{{ deliveryInfo.days }}"
                                                               size="1">
                                                    </td>

                                                    <td class="text-left">
                                                        <input name="delivery_info[{{ delivery_row }}][rate]"
                                                               class="form-control" value="{{ deliveryInfo.rate }}"
                                                               size="1">
                                                    </td>

                                                    <td class="text-left">
                                                        <button type="button"
                                                                onclick="$('#special-row{{ special_row }}').remove();"
                                                                data-toggle="tooltip" title="{{ button_remove }}"
                                                                class="btn btn-danger"><i
                                                                    class="fa fa-minus-circle"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                                {% set delivery_row = delivery_row + 1 %}
                                            {% endfor %}
                                            </tbody>
                                            <tfoot>
                                            <tr>
                                                <td colspan="4"></td>
                                                <td class="text-left">
                                                    <button type="button" onclick="addDeliveryInfo();"
                                                            data-toggle="tooltip"
                                                            class="btn btn-primary"><i
                                                                class="fa fa-plus-circle"></i></button>
                                                </td>
                                            </tr>
                                            </tfoot>
                                        </table>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script type="text/javascript"><!--
    var delivery_row = {{ delivery_row }};

    function addDeliveryInfo() {
        html = '<tr id="delivery-row' + delivery_row + '">';

        html += ' <td class="text-left"><select name="delivery_info[' + delivery_row + '][country_id]" class="form-control countrySelect" data-id="' + delivery_row + '">';
        html += ' <option value="">Select</option>';
        {% for country in countries %}
        html += '      <option value="{{ country.country_id }}">{{ country.name|escape('js') }}</option>';
        {% endfor %}
        html += '  </select></td>';

        html += '  <td class="text-left"><select name="delivery_info[' + delivery_row + '][zone_id]" class="form-control zoneSelect" data-id="' + delivery_row + '">';
        html += '  </select></td>';

        html += '  <td class="text-left"><input type="text" name="delivery_info[' + delivery_row + '][days]" value="" class="form-control" size="1"/></td>';
        html += '  <td class="text-left"><input type="text" name="delivery_info[' + delivery_row + '][rate]" value="" class="form-control" size="1"/></td>';

        html += '  <td class="text-left"><button type="button" onclick="$(\'#delivery-row' + delivery_row + '\').remove();" data-toggle="tooltip" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button></td>';
        html += '</tr>';

        $('#delivery tbody').append(html);
        delivery_row++;
    }

    //--></script>


<script type="text/javascript"><!--
    $(document).on('change', 'select.countrySelect', function(){
        var countryId = $(this).children("option:selected").val();
        var dataId = $(this).attr('data-id');
        $.ajax({
            url: 'index.php?route=account/account/country&country_id=' + countryId,
            dataType: 'json',
            beforeSend: function () {
                $('select[name=\'country_id\']').prop('disabled', true);
            },
            complete: function () {
                $('select[name=\'country_id\']').prop('disabled', false);
            },
            success: function (json) {
                if (json['postcode_required'] == '1') {
                    $('input[name=\'postcode\']').parent().parent().addClass('required');
                } else {
                    $('input[name=\'postcode\']').parent().parent().removeClass('required');
                }

                html = '<option value="">{{ text_select }}</option>';

                if (json['zone'] && json['zone'] != '') {
                    for (i = 0; i < json['zone'].length; i++) {
                        html += '<option value="' + json['zone'][i]['zone_id'] + '"';

                        if (json['zone'][i]['zone_id'] == '{{ zone_id }}') {
                            html += ' selected="selected"';
                        }

                        html += '>' + json['zone'][i]['name'] + '</option>';
                    }
                } else {
                    html += '<option value="0" selected="selected">{{ text_none }}</option>';
                }

                $('select[name=\'delivery_info[' + dataId + '][zone_id]\']').html(html);
            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
            }
        });
    });

    $('select[name=\'country_id\']').trigger('change');
    //--></script>

{{ footer }}
