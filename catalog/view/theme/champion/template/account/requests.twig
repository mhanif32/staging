{{ header }}
<section id="account-edit" class="register update-profile" style="background: #F3F3F3;">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="py-5">
                    <div class="form-signin card py-4 px-2">
                        <div id="delivery-info" class="container">
                            <div class="row">
                                <div id="content" class="col-sm-12">
                                    {% if success %}
                                        <div class="alert alert-success alert-dismissible"><i
                                                    class="fa fa-check-circle"></i> {{ success }}</div>
                                    {% endif %}
                                    <div class="justify-content-between row mx-0">
                                        <h4 class="f-20 font-weight-bold text-uppercase mb-3">{{ heading_title }}</h4>
                                    </div>

                                    <hr style="margin: 15px -25px">
                                    {% if requests %}
                                        <div class="table-responsive">
                                            <table class="table border-bottom-0">
                                                <thead>
                                                <tr class="bg-light font-weight-bold text-uppercase">
                                                    <td class="text-center">ID</td>
                                                    <td class="text-center">Customer</td>
                                                    <td class="text-center">Delivery Location</td>
                                                    <td class="text-center">Seller</td>
                                                    <td class="text-center">Order Date</td>
                                                    <td class="text-center"></td>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                {% for request in requests %}
                                                    <tr>
                                                        <td class="text-center">#{{ request.request_id }}</td>
                                                        <td class="text-center">{{ request.customer_name }}</td>
                                                        <td class="text-center">{{ request.delivery_location }}</td>
                                                        <td class="text-center">{{ request.mpseller_name }}</td>
                                                        <td class="text-center">{{ request.requested_date }}</td>
                                                        <td class="text-center"><a href="{{ request.view_link }}"
                                                                                   data-toggle="tooltip"
                                                                                   title="{{ button_view }}"
                                                                                   class="btn btn-success btn-sm">View</a></td>
                                                    </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-6 text-left">{{ pagination }}</div>
                                            <div class="col-sm-6 text-right">{{ results }}</div>
                                        </div>
                                    {% else %}
                                        <p>Your Delivery Partner Request is empty!</p>
                                    {% endif %}
                                    {{ content_bottom }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{{ footer }}