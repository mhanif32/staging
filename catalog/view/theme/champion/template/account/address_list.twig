<section id="account-account" class="register update-profile" style="background: #F3F3F3;">

    <div class="container">
        <div class="row">
            <div class="col-12 col-md-4 col-lg-4">
                <div class="card mt-5 mb-4" style="max-width: 540px;">
                    <div class="row no-gutters">
                        <div class="col-md-3 m-auto text-center">
                            <img src="catalog/view/theme/champion/image/profile-image.png" class="card-img w-75"
                                 alt="...">
                        </div>
                        <div class="col-md-9">
                            <div class="card-body">
                                <p class="card-text mb-0">Hello</p>
                                <h5 class="card-title f-15">Peter Parker</h5></div>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div id="accordion" class="accordion">
                        <div class="card mb-0">
                            <div class="card-header collapsed bg-white" data-toggle="collapse" href="#collapseOne">
                                <img src="catalog/view/theme/champion/image/Dashboard.svg" alt="" class="mr-2">
                                <a class="card-title">
                                    Dashboard
                                </a>
                            </div>

                            <div id="collapseOne" class="card-body collapse" data-parent="#accordion">
                                <p>Profile Information</p>
                            </div>
                            <div class="card-header collapsed bg-white" data-toggle="collapse" data-parent="#accordion"
                                 href="#collapseTwo">
                                <img src="catalog/view/theme/champion/image/Order Box (2).svg" alt="" class="mr-2">
                                <a class="card-title">
                                    My Order
                                </a>
                            </div>
                            <div id="collapseTwo" class="card-body collapse" data-parent="#accordion">
                                <ul class="list-unstyled ml-4">
                                    <li><a href="{{ order }}">{{ text_order }}</a></li>
                                    <li><a href="{{ download }}">{{ text_download }}</a></li>
                                    {% if reward %}
                                        <li><a href="{{ reward }}">{{ text_reward }}</a></li>
                                    {% endif %}
                                    <li><a href="{{ return }}">{{ text_return }}</a></li>
                                    <li><a href="{{ transaction }}">{{ text_transaction }}</a></li>
                                    <li><a href="{{ recurring }}">{{ text_recurring }}</a></li>
                                </ul>
                            </div>
                            <div class="card-header collapsed bg-white" data-toggle="collapse" data-parent="#accordion"
                                 href="#collapseThree">
                                <img src="catalog/view/theme/champion/image/Profile.svg" alt="" class="mr-2">
                                <a class="card-title">
                                    ACCOUNT SETTINGS
                                </a>
                            </div>
                            <div id="collapseThree" class="collapse show" data-parent="#accordion">
                                <div class="card-body">
                                    <ul class="list-unstyled ml-4">
                                        <li><a href="{{ edit }}">{{ text_edit }}</a></li>
                                        <li><a href="{{ address }}">{{ text_address }}</a></li>
                                        <li><a href="{{ password }}">{{ text_password }}</a></li>
                                    </ul>
                                </div>
                            </div>
                            <div class="p-3 bg-white" href="">
                                <img src="catalog/view/theme/champion/image/Dashboard.svg" alt="" class="mr-2">
                                <a href="{{ wishlist }}" class="card-title">{{ text_wishlist }}</a>
                            </div>
                            <div class="p-3 bg-white" href="">
                                <img src="catalog/view/theme/champion/image/Logout.svg" alt="" class="mr-2">
                                <a class="card-title">
                                    Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-8 col-lg-8">
                <div class="py-5">
                    <div class="form-signin card p-4">

                        <section class="shipping-address" id="account-address">
                            <div class="container">
                                <h3 class="mb-4 text-left f-20">
                                    Manage Address
                                </h3>

                                <div class="row m-0">
                                    <div class="col-12 p-4 border mb-5 text-success">
                                        <a href="{{ add }}">
                                            {#{{ button_new_address }}#}
                                            <i class="fas fa-plus mr-4" aria-hidden="true"></i> Add new Address</a>
                                    </div>
                                </div>
                                {% if addresses %}
                                    {% for result in addresses %}
                                        <form action="#" class="">
                                            <div class="row m-0 mb-5">
                                                <div class="col-12 p-4 border">
                                                    <div class="main-address-title d-inline-block">
                                                        <h6>
                                                            Main Delivery Address
                                                        </h6>
                                                    </div>
                                                    <div class="edit delete d-inline-block float-right buttons clearfix">
                                                        <a href="{{ result.update }}">{{ button_edit }}</a>
                                                        <a
                                                                href="{{ result.delete }}">{{ button_delete }}</a>
                                                    </div>
                                                </div>
                                                <div class="adress-description p-4 border-top-0 border w-100">

                                                    {{ result.address }}

                                                </div>
                                            </div>
                                        </form>
                                    {% endfor %}
                                {% else %}
                                    <p>{{ text_empty }}</p>
                                {% endif %}
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

</section>














