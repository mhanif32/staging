                        <div class="table-responsive d-none">
                            <table class="table border-bottom-0">
                                <thead>
                                <tr class="bg-light font-weight-bold text-uppercase">
                                    <td class="text-center">{{ column_order_id }}</td>
                                    <td class="text-center">{{ column_customer }}</td>
                                    <td class="text-center">{{ column_product }}</td>
                                    <td class="text-center">{{ column_status }}</td>
                                    <td class="text-center">{{ column_total }}</td>
                                    <td class="text-center">{{ column_date_added }}</td>
                                    <td></td>
                                </tr>
                                </thead>
                                <tbody>
                                {% for order in orders %}
                                    <tr>
                                        <td class="text-center">#{{ order.order_id }}</td>
                                        <td class="text-center">{{ order.name }}</td>
                                        <td class="text-center">{{ order.products }}</td>
                                        <td class="text-center">
                                            {% if order.status == 'Pending' %}
                                                <span class="btn-sm btn-warning">{{ order.status }}</span>
                                            {% elseif order.status == 'Shipped' %}
                                                <span class="btn-sm btn-gold">{{ order.status }}</span>
                                            {% elseif order.status == 'Complete' %}
                                                <span class="btn-sm btn-success">{{ order.status }}</span>
                                            {% elseif order.status == 'Processing' %}
                                                <span class="btn-sm btn-danger">{{ order.status }}</span>
                                            {% else %}
                                                <span class="btn-sm btn-primary">{{ order.status }}</span>
                                            {% endif %}


                                        </td>
                                        <td class="text-center">{{ order.total }}</td>
                                        <td class="text-center">{{ order.date_added }}</td>
                                        <td class="text-center"><a href="{{ order.view }}" data-toggle="tooltip"
                                                                   title="{{ button_view }}"
                                                                   class="btn btn-success btn-sm">View</a>
