<div id="account-login" class="container-fluid">
    {% if success %}
        <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}</div>
    {% endif %}
    {% if error_warning %}
        <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
    {% endif %}


        {#<div class="col-sm-6">#}
        {#<div class="well">#}
        {#<h2>{{ text_new_customer }}</h2>#}
        {#<p><strong>{{ text_register }}</strong></p>#}
        {#<p>{{ text_register_account }}</p>#}
        {#<a href="{{ register }}" class="btn btn-primary">{{ button_continue }}</a></div>#}
        {#</div>#}
<div class="login-form py-5">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-signin my-5">
            <h3 class="mt-5 mb-4 font-weight-600 text-center ">{{ text_returning_customer }}</h3>

            <div class="form-group">
                <label class="control-label" for="input-email">{{ entry_email }}</label>
                <input type="text" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label" for="input-password">{{ entry_password }}</label>
                <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="input-password" class="form-control" />
            </div>

            <div class="checkbox mb-3">
                <div class="form-group form-group-check mt-4">
                    <input type="checkbox" id="html">
                    <label for="html"><span>Remember me</span></label>
                </div>
            </div>


            <input type="submit" value="{{ button_login }}" class="btn btn-primary w-100 bg-success my-3" />
            {% if redirect %}
                <input type="hidden" name="redirect" value="{{ redirect }}" />
            {% endif %}

            <div class="w-60 d-inline-block">
                <p style="font-size: 0.7rem;"> Don't have an account?<a href="{{ register }}" style="color: #F15A29;">Register </a></p>
            </div>
            <div class="w-30 d-inline-block">
                <p style="font-size: 0.7rem; text-align: right"><a href="{{ forgotten }}">{{ text_forgotten }}</a></p>
            </div>
        </form>
</div>
</div>

{{ footer }}