{{ header }}
<div id="account-recurring" class="bg-light main-body">
  {#<ul class="breadcrumb">#}
    {#{% for breadcrumb in breadcrumbs %}#}
    {#<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>#}
    {#{% endfor %}#}
  {#</ul>#}
  <div class="container">
  <div class="row">
    <div id="content" class="col-12 py-5">{{ content_top }}
      <div class="form-signin card px-4 box-shadow">
        <div>
          <a href='javascript:history.back(1);' class="position-absolute f-35"><i class="fas fa-long-arrow-alt-left on-hover"></i></a>
      <h3 class="f-20 font-weight-bold text-uppercase text-center mt-3">{{ heading_title }}</h3>
        </div>
      {% if recurrings %}
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="bg-light">
            <tr>
              <td class="text-right">{{ column_order_recurring_id }}</td>
              <td class="text-left">{{ column_product }}</td>
              <td class="text-left">{{ column_status }}</td>
              <td class="text-left">{{ column_date_added }}</td>
              <td class="text-right"></td>
            </tr>
          </thead>
          <tbody>
          
          {% for recurring in recurrings %}
          <tr>
            <td class="text-right">#{{ recurring.order_recurring_id }}</td>
            <td class="text-left">{{ recurring.product }}</td>
            <td class="text-left">{{ recurring.status }}</td>
            <td class="text-left">{{ recurring.date_added }}</td>
            <td class="text-right"><a href="{{ recurring.view }}" data-toggle="tooltip" title="{{ button_view }}" class="btn btn-info"><i class="fa fa-eye"></i></a></td>
          </tr>
          {% endfor %}
          
          </tbody>
        </table>
      </div>
      <div class="text-right">{{ pagination }}</div>
      {% else %}
      <p>{{ text_empty }}</p>
      {% endif %}
      {#<div class="buttons clearfix mb-3">#}
        {#<div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>#}
      {#</div>#}
      {{ content_bottom }}
      </div></div>
    </div>
</div>
</div>
{{ footer }}