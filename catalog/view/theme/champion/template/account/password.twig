<section id="account-password" class="register update-profile" style="background: #F3F3F3;">

    <div class="container">
        <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
                <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endfor %}
        </ul>
        <div class="row">
            {{ profile_column_left }}
            <div class="col-12 col-md-12 col-lg-6">
                <div class="pb-5">
                    <div class="form-signin card p-4">
                        <div class="container">
                            <h4 class="f-20 font-weight-bold text-uppercase mb-3">{{ heading_title_cp }}</h4>
                            <form action="{{ action }}" method="post" enctype="multipart/form-data"
                                  class="form-horizontal">
                                <fieldset>



                                    <div class="form-group required">
                                        <label class="control-label"
                                               for="input-oldPassword">{{ old_entry_password }}</label>
                                        <div class="">
                                            <input type="password" name="oldPassword" value="{{ confirm }}"
                                                   placeholder="{{ old_entry_password }}" id="input-old-password"
                                                   class="form-control rounded-0 col-lg-6"/>
                                            {#{% if error_old_password %}#}
                                                {#<div class="text-danger f-13">{{ error_old_password }}</div>#}
                                            {#{% endif %}#}
                                        </div>
                                    </div>



                                    <div class="form-group required">
                                        <label class="control-label"
                                               for="input-password">{{ entry_password }}</label>
                                        <div class="">
                                            <input type="password" name="password" value="{{ password }}"
                                                   placeholder="{{ entry_password }}" id="input-password"
                                                   class="form-control rounded-0 col-lg-6"/>
                                            {% if error_password %}
                                                <div class="text-danger f-14">{{ error_password }}</div>
                                            {% endif %}
                                        </div>
                                    </div>




                                    <div class="form-group required">
                                        <label class="control-label"
                                               for="input-confirm">{{ entry_confirm }}</label>
                                        <div class="">
                                            <input type="password" name="confirm" value="{{ confirm }}"
                                                   placeholder="{{ entry_confirm }}" id="input-confirm"
                                                   class="form-control rounded-0 col-lg-6"/>
                                            {% if error_confirm %}
                                                <div class="text-danger">{{ error_confirm }}</div>
                                            {% endif %}
                                        </div>
                                    </div>
                                </fieldset>
                                <div class="buttons clearfix">
                                        <input type="submit" value="UPDATE" class="btn btn-success px-5 custom-btn"/>
                                </div>
                            </form>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</section>


