<section id="account-forgotten" class="bg-gray-100 py-5">
    <div class="login-form forgot-password py-5" style="background-image: none;">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal form-signin">
            <h3 class="mt-5 mb-4 text-center text-uppercase" style="font-size: 2.39rem; font-weight: 800;">Forgot Password?</h3>
            <p style="font-size: 0.9rem;" class="text-center"> Please enter your username or email address. You will
                receive a link to create a new password via email.</p>
            <fieldset class="w-80 m-auto">
                <div class="form-group required">
                    <label class="control-label" for="input-email">{{ entry_email }}</label>
                    <div class="">
                        <input type="text" name="email" value="{{ email }}" id="input-email" class="form-control"/>
                    </div>
                </div>
                <div class="buttons clearfix">
                    <input type="submit" value="{{ button_continue }}" class="btn btn-success w-100"/>
                </div>
            </fieldset>
        </form>
    </div>
</section>
