{{ header }}
<div id="mv-information-section" class="bg-light">
    <div id="container" class="container">
        {% if error_warning %}
            <div class="alert alert-danger warning"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        {% if success %}
            <div class="alert alert-success success"><i class="fa fa-check-circle"></i> {{ success }}
                <button type="button" class="close" data-dismiss="alert">&times;</button>
            </div>
        {% endif %}
        <div class="row">
            {{ profile_column_left }}
            <div id="content" class="col-12 col-md-9 col-lg-9 py-5">
                <div class="mv-dashboard-wrap">
                    <div class="row">
                        <div class="col-sm-12 mv-reviews">
                            <div class="form-signin card px-4 box-shadow">
                                <div class="row justify-content-between mt-3 px-3">
                                    <div>
                                        <h3 class="f-20 font-weight-bold text-uppercase">
                                            {{ heading_title }}
                                        </h3>
                                    </div>
                                    <div class="panel panel-default">
                                        <div class="pull-right">
                                            <a href="{{ add }}" data-toggle="tooltip" title="" class="btn btn-primary"
                                               data-original-title="{{ button_add }}"><i class="fa fa-plus"></i></a>
                                            <button type="button" data-toggle="tooltip" title="{{ button_delete }}"
                                                    class="btn btn-danger"
                                                    onclick="confirm('{{ text_confirm }}') ? $('#form-information-section').submit() : false;">
                                                <i class="fa fa-trash-o"></i></button>
                                        </div>
                                    </div>
                                </div>

                                <hr style="margin: 15px -25px">

                                <form action="{{ delete }}" method="post" enctype="multipart/form-data"
                                      class="form-horizontal" id="form-information-section">
                                    <div class="table-responsive">
                                        <table class="table table-hover list">
                                            <thead>
                                            <tr>
                                                <td style="width: 1px;" class="text-center"><input type="checkbox"
                                                                                                   onclick="$('input[name*=\'selected\']').prop('checked', this.checked);"/>
                                                </td>
                                                <td class="text-left">{{ column_title }}</td>
                                                <td class="text-right">{{ column_status }}</td>
                                                <td class="text-right">{{ column_sort_order }}</td>
                                                <td class="text-right">{{ column_action }}</td>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            {% if information_sections %}
                                                {% for information_section in information_sections %}
                                                    <tr>
                                                        <td class="text-center">{% if information_section.mpseller_information_section_id in selected %}
                                                                <input type="checkbox" name="selected[]"
                                                                       value="{{ information_section.mpseller_information_section_id }}"
                                                                       checked="checked"/>
                                                            {% else %}
                                                                <input type="checkbox" name="selected[]"
                                                                       value="{{ information_section.mpseller_information_section_id }}"/>
                                                            {% endif %}</td>
                                                        <td class="text-left">{{ information_section.title }}</td>
                                                        <td class="text-right">{{ information_section.status }}</td>
                                                        <td class="text-right">{{ information_section.sort_order }}</td>
                                                        <td class="text-right"><a href="{{ information_section.edit }}"
                                                                                  data-toggle="tooltip"
                                                                                  title="{{ button_edit }}"
                                                                                  class="btn btn-primary"><i
                                                                        class="fa fa-pencil"></i></a></td>
                                                    </tr>
                                                {% endfor %}
                                            {% else %}
                                                <tr>
                                                    <td class="text-center" colspan="5">{{ text_no_results }}</td>
                                                </tr>
                                            {% endif %}
                                            </tbody>
                                        </table>
                                    </div>
                                </form>
                                <div class="row mb-2">
                                    <div class="col-sm-6 text-left">{{ pagination }}</div>
                                    <div class="col-sm-6 text-right">{{ results }}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ content_bottom }}</div>
            </div>
        </div>
    </div>
</div>
{{ footer }}