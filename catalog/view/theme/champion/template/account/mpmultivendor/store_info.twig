{{ header }}
<div id="store-information">
    <div id="container" class="container">
        {% if success %}
            <div class="alert alert-success success"><i class="fa fa-check-circle"></i> {{ success }}</div>
        {% endif %}
        {% if error_warning %}
            <div class="alert alert-danger warning alert-dismissible"><i
                        class="fa fa-exclamation-circle"></i> {{ error_warning }}</div>
        {% endif %}
        {% if error_warning_message %}
            <div class="alert alert-warning warning"><i class="fa fa-check-circle"></i> {{ error_warning_message }}
            </div>
        {% endif %}
        {% if custom_themename != 'journal2' %}
        <div class="row justify-content-center">{% endif %}{{ column_left }}{% if custom_themename == 'journal2' %}{{ column_right }}{% endif %}
            {% if column_left and column_right %}
                {% set class = 'col-sm-6' %}
            {% elseif column_left or column_right %}
                {% set class = 'col-sm-9' %}
            {% else %}
                {% set class = 'col-sm-12' %}
            {% endif %}
            <div id="content" class="col-lg-9 mt-4">{{ content_top }}{{ mpseller_links }}
                <div class="mv-dashboard-wrap">
                    <h3 class="f-25 text-center font-weight-black text-uppercase">{{ heading_title }}</h3>
                    <div class="text-right">
                        <button type="submit" form="form-storeinfo" data-toggle="tooltip" title=""
                                class="btn btn-primary" data-original-title="{{ button_save }}"><i
                                    class="fa fa-save"></i> Save
                        </button>
                        {#<a href="" data-toggle="tooltip" title="" class="btn btn-default"#}
                        {#data-original-title="{{ button_cancel }}"><i class="fa fa-reply"></i> Cancel</a>#}

                        <a href='javascript:history.back(1);' data-toggle="tooltip" title="" class="btn btn-default"
                           data-original-title="cancel"><i class="fa fa-reply"></i> Cancel</a>
                    </div>

                    <div class="row ">
                        <div class="col-sm-12 mv-reviews">
                            <form method="post" enctype="multipart/form-data" class="form-horizontal"
                                  id="form-storeinfo">
                                <ul id="tabs" class="nav nav-tabs htabs font-weight-bold pb-2">
                                    <li class="active"><a href="#tab-store" data-toggle="tab"
                                                          class="active">{{ tab_store }}</a></li>
                                    <li><a href="#tab-local" data-toggle="tab">{{ tab_local }}</a></li>
                                    <li><a href="#tab-image" data-toggle="tab">{{ tab_image }}</a></li>
                                    <li><a href="#tab-social" data-toggle="tab">{{ tab_social_profiles }}</a></li>
                                </ul>
                                <div class="{% if custom_themename != 'journal2' %} tab-content {% else %} tabs-content {% endif %}">
                                    <div class="tab-pane active mt-3" id="tab-store">
                                        <div class="form-group required">
                                            <label class="control-label col-sm-12">{{ entry_store_owner }}</label>
                                            <div class="col-sm-12">
                                                <input type="text" class="form-control" name="store_owner"
                                                       placeholder="{{ entry_store_owner }}" value="{{ store_owner }}"/>
                                                {% if error_store_owner %}
                                                    <div class="text-danger">{{ error_store_owner }}</div>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="form-group required">
                                            <label class="control-label col-sm-12">{{ entry_store_name }}</label>
                                            <div class="col-sm-12">
                                                <input type="text" name="store_name" class="form-control"
                                                       placeholder="{{ entry_store_name }}" value="{{ store_name }}"/>
                                                {% if error_store_name %}
                                                    <div class="text-danger">{{ error_store_name }}</div>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="form-group required">
                                            <label class="control-label col-sm-12">{{ entry_description }}</label>
                                            <div class="col-sm-12">
                                                <textarea name="description" rows="5"
                                                          class="form-control">{{ description }}</textarea>
                                                {% if error_description %}
                                                    <div class="text-danger">{{ error_description }}</div>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="form-group required">
                                            <label class="control-label col-sm-12">{{ entry_meta_description }} <i
                                                        class="fas fa-question-circle" data-toggle="tooltip"
                                                        data-placement="right"
                                                        title="Search engines show the meta description in search results mostly when the searched-for phrase is within the description"></i></label>
                                            <div class="col-sm-12">
                                                <textarea name="meta_description" id="input-storemeta" rows="5"
                                                          class="form-control">{{ meta_description }}</textarea>
                                                {% if error_meta_description %}
                                                    <div class="text-danger">{{ error_meta_description }}</div>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="form-group required">
                                            <label class="control-label col-sm-12">{{ entry_meta_keyword }} <i
                                                        class="fas fa-question-circle" data-toggle="tooltip"
                                                        data-placement="right"
                                                        title="describe the content of a website shortly and concisely, the keywords are generally written in lower case, and separated with a comma."></i></label>
                                            <div class="col-sm-12">
                                                <textarea name="meta_keyword" rows="5"
                                                          class="form-control">{{ meta_keyword }}</textarea>
                                                {% if error_meta_keyword %}
                                                    <div class="text-danger">{{ error_meta_keyword }}</div>
                                                {% endif %}
                                            </div>
                                        </div>

                                        <div class="form-group required">
                                            <label class="control-label col-sm-12">{{ entry_address }}</label>
                                            <div class="col-sm-12">
                                                <textarea name="address" class="form-control"
                                                          placeholder="{{ entry_address }}">{{ address }}</textarea>
                                                {% if error_address %}
                                                    <div class="text-danger">{{ error_address }}</div>
                                                {% endif %}
                                            </div>
                                        </div>
                                        <div class="form-group required">
                                            <label class="control-label col-sm-12">{{ entry_email }}</label>
                                            <div class="col-sm-12">
