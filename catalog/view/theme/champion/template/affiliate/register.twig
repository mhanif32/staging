                                                       placeholder="{{ custom_field.name }}"
                                                       data-date-format="YYYY-MM-DD HH:mm"
                                                       id="input-custom-field{{ custom_field.custom_field_id }}"
                                                       class="form-control"/>
                                                <span class="input-group-btn">
