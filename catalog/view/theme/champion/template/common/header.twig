<script>
    $('#confirm-address').on('click', function () {

        var data = {
            country: $('#input-country').val(),
            state: $('#input-zone').val(),
            city: $('#input-city').val()
        };

        $.ajax({
            url: 'index.php?route=common/home/deliveryaddress',
            type: 'POST',
            data: data,
            success: function (data) {

                console.log(data.result);
                $('#loggedInAddress').html(data.result);
                $('#exampleModalCenter').modal('toggle');
                $('#modalCurrency').modal('toggle');
                //location.reload(true);
            }
        });
        return false;
    });
</script>

