<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{{ title }}</title>
    <base href="{{ base }}"/>
    {% if description %}
        <meta name="description" content="{{ description }}"/>
    {% endif %}
    {% if keywords %}
        <meta name="keywords" content="{{ keywords }}"/>
    {% endif %}
    <script src="catalog/view/javascript/jquery/jquery-2.1.1.min.js" type="text/javascript"></script>
    <!-- fontawesome cdn -->
    <script src="https://kit.fontawesome.com/d67e01f116.js" crossorigin="anonymous"></script>
    {#<link href="catalog/view/javascript/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen"/>#}
    <link href="catalog/view/theme/champion/stylesheet/css/bootstrap.css" rel="stylesheet" media="screen"/>
    {#<script src="catalog/view/javascript/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>#}
    <script src="catalog/view/theme/champion/stylesheet/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js"
            type="text/javascript"></script>
    <link href="catalog/view/javascript/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css"/>
    <link href="//fonts.googleapis.com/css?family=Open+Sans:400,400i,300,700" rel="stylesheet" type="text/css"/>
    {#<link href="catalog/view/theme/champion/stylesheet/stylesheet.css" rel="stylesheet">#}
    <link href="catalog/view/theme/champion/stylesheet/css/style.css" rel="stylesheet">
    {% for style in styles %}
        <link href="{{ style.href }}" type="text/css" rel="{{ style.rel }}" media="{{ style.media }}"/>
    {% endfor %}
    {% for script in scripts %}
        <script src="{{ script }}" type="text/javascript"></script>
    {% endfor %}
    <script src="catalog/view/javascript/common.js" type="text/javascript"></script>
    {% for link in links %}
        <link href="{{ link.href }}" rel="{{ link.rel }}"/>
    {% endfor %}
    {% for analytic in analytics %}
        {{ analytic }}
    {% endfor %}
</head>
<body>


{#<header>#}
    {#<div class="container">#}
        {#<div class="row">#}
            {#<div class="col-sm-2">#}
                {#<div id="logo">{% if logo %}<a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}"#}
                                                                      {#alt="{{ name }}" class="img-responsive"/>#}
                        {#</a>{% else %}#}
                        {#<h1><a href="{{ home }}">{{ name }}</a></h1>#}
                    {#{% endif %}</div>#}
            {#</div>#}
            {#<div class="col-sm-7">#}
                {#<div class="row">#}
                    {#<div class="col-12">#}
                        {#{{ search }}#}
                    {#</div>#}
                    {#<div class="col-12">#}
                        {#{{ menu }}#}
                    {#</div>#}
                {#</div>#}
            {#</div>#}
            {#<div class="col-sm-3">{{ cart }}</div>#}
        {#</div>#}
    {#</div>#}
{#</header>#}

{% if show_top_bar %}
<section class="top-headerbar bg-success">
    <div class="container">
        <div class="row py-4">
            <div class="col-lg-3 f-15 text-white m-0 p-lg-0" style="line-height: 2.5">
                Choose your country & delivery location
            </div>
            <div class="col-lg-3">
                <div class="select">
                    <select class="pl-3 form-control rounded border-0 select">
                        <option>United States</option>
                    </select>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="select">
                    <select class="pl-3 form-control rounded border-0 select">
                        <option>Las Vegas</option>
                    </select>
                </div>
            </div>
            <div class="col-lg-3">
                <div class="text-left position-relative btn-border-div">
                    <a class="btn bg-primary w-100 text-white" href="#" role="button" style="font-size: 0.9375rem; height: 40px; line-height: 2">CONFIRM</a>
                </div>

            </div>
        </div>
</section>
{% endif %}

<header>
    <div class="container-fluid">
        <nav class="navbar navbar-expand-xl navbar-light px-lg-5 py-lg-0">
            <a class="navbar-brand" href="index.html">
                <div id="logo">{% if logo %}<a href="{{ home }}"><img src="{{ logo }}" title="{{ name }}"
                                                                      alt="{{ name }}" class="img-responsive" style="max-width: 150px"/>
                        </a>{% else %}
                        <h1><a href="{{ home }}">{{ name }}</a></h1>
                    {% endif %}</div>
            </a>

            <button class="navbar-toggler order-2" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-center order-3" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active mr-lg-5">
                        {{ search }}
                        <ul class="navbar-nav sub-nav-menu mt-3">
                            {{ menu }}
                        </ul>
                    </li>
                    <li>
                        {{ currency }}
                    </li>
                    {% if logged %}
                        <li class="nav-item"><a class="nav-link mt-3" href="{{ account }}">{{ text_account }}</a></li>
{#                        <li class="nav-item"><a class="nav-link" href="{{ order }}">{{ text_order }}</a></li>#}
{#                        <li class="nav-item"><a class="nav-link" href="{{ transaction }}">{{ text_transaction }}</a></li>#}
{#                        <li class="nav-item"><a class="nav-link" href="{{ download }}">{{ text_download }}</a></li>#}
                        <li class="nav-item"><a class="nav-link mt-3" href="{{ logout }}">{{ text_logout }}</a></li>
                    {% else %}
                        <li class="nav-item"><a class="nav-link mt-3" href="{{ login }}">{{ text_login }}</a></li>
                        <li class="nav-item before-verticle-line"><a class="nav-link mt-3" href="{{ register }}">{{ text_register }}</a></li>

                    {% endif %}

                    <li>
                        <div class="d-lg-flex d-none justify-content-end align-items-center order-1 order-xl-3 cart-icons">
                            {{ cart }}
                        </div>

                    </li>
                </ul>
            </div>
            <div class="d-lg-none d-flex justify-content-end align-items-center order-1 order-xl-3 cart-icons">
                {{ cart }}
            </div>
        </nav>
    </div>
</header>
