{{ header }}

<section class="product-details pt-5 pb-4">
    <div class="container box-shadow">
        <a href='javascript:history.back(1);' class="position-absolute" style="z-index: 1"><i class="fas fa-long-arrow-alt-left f-25 on-hover"></i></a>
        <div class="row">
            <div class="col-xs-12 col-md-12 col-sm-12 col-lg-5 m-auto">
                <div class="product-images">
                    {% if thumb or images %}
                    <div class="mySlides text-center thumbnails" style="display: block;">
                        {% if thumb %}
                            <a class="thumbnail" href="{{ popup }}" title="{{ heading_title }}"><img src="{{ thumb }}"
                                                                                                     title="{{ heading_title }}"
                                                                                                     alt="{{ heading_title }}"
                                                                                                     class="img-fluid"/></a>
                        {% endif %}
                        <div class="row">
                            {% if images %}
                                {% for image in images %}
                                    <div class="column thumbnails">
                                        <a class="thumbnail" href="{{ image.popup }}" title="{{ heading_title }}">
                                            <img src="{{ image.thumb }}" title="{{ heading_title }}"
                                                 alt="{{ heading_title }}"/></a>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-12 col-sm-12 col-lg-7">
                <div class="row py-2">
                    <div class="col-10 product-title">
                        <h4>{{ heading_title }}</h4>

                        {% if product.rating %}
                            <div class="rating d-inline-block">
                                {% for i in 1..5 %}
                                    {% if product.rating < i %}
                                        <span class="fa fa-stack">
                                                            <i
                                                                    class="fa fa-star-o fa-stack-2x text-gold f-20"></i>
                                                        </span>
                                    {% else %}
                                        <span class="fa fa-stack"><i
                                                    class="fa fa-star fa-stack-2x text-gold f-20"></i><i
                                                    class="fa fa-star-o fa-stack-2x text-gold f-20"></i></span>
                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="rating d-inline-block">
                                <i class="fa fa-star-o text-gold f-20"></i>
                                <i class="fa fa-star-o text-gold f-20"></i>
                                <i class="fa fa-star-o text-gold f-20"></i>
                                <i class="fa fa-star-o text-gold f-20"></i>
                                <i class="fa fa-star-o text-gold f-20"></i>
                            </div>
                        {% endif %}

                        <div class="rating-details d-inline-block">
                            {#                            <span style="color: #BBB7B7; font-size: 0.8125rem;" class="mr-2">( 4.8 )</span>#}
                            <a href="" onclick="$('a[href=\'#tab-review\']').trigger('click'); return false;"><span
                                        style="font-size: 0.8125rem;" class="text-secondary">{{ reviews }}</span></a>
                        </div>
                    </div>
                    <div class="col-2 wish-list text-right">
                        <div class="wish-list" style="color: #8D8D8D; font-size: 20px;">
                            <button type="button" data-toggle="tooltip" class="btn btn-default"
                                    title="{{ button_wishlist }}" onclick="wishlist.add('{{ product_id }}');"><i
                                        class="fa fa-heart"></i></button>
                        </div>
                    </div>
                </div>
                <hr class="mt-0">

                <div class="justify-content-between pt-2">
                    {% if price %}
                        <ul class="product-price list-unstyled d-inline-block mb-0">
                            {% if not special %}
                                <span class="text-success font-weight-bold mr-2">
                                    {{ price }}
                                </span>
                            {% else %}
                                <li><span class="text-success font-weight-bold mr-2"
                                          style="font-size: 1.25rem">{{ special }}</span>
                                    <span style="text-decoration: line-through; font-size: 0.8125rem">{{ price }}</span>
                                </li>

                            {% endif %}
                            {% if tax %}
                                <li>{{ text_tax }} {{ tax }}</li>
                            {% endif %}
                            {% if points %}
                                <li>{{ text_points }} {{ points }}</li>
                            {% endif %}
                            {% if discounts %}
                                {% for discount in discounts %}
                                    <li>{{ discount.quantity }}{{ text_discount }}{{ discount.price }}</li>
                                {% endfor %}
                            {% endif %}
                        </ul>
                    {% endif %}
                    <div class="delivery d-inline-block float-right"><span class="" style="color: #BBB7B7; font-size: 0.8125rem;">Delivered in 7 - 11 days</span>
                    </div>
                </div>

