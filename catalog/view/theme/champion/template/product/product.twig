<section class="product-details pt-5 pb-4">

    <div class="container border">
        <div class="row">
            <div class="col-xs-12 col-md-12 col-sm-12 col-lg-5">
                <div class="product-images mt-5 pt-5">
                    {% if thumb or images %}
                    <div class="mySlides text-center mb-5 thumbnails" style="display: block;">
                        {% if thumb %}
                            <a class="thumbnail" href="{{ image.popup }}"
                               title="{{ heading_title }}">
                                <img src="{{ thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}"
                                     class="img-fluid"/></a>
                        {% endif %}

                        <div class="row justify-content-center mt-5">
                            {% if images %}
                                {% for image in images %}
                                    <div class="column thumbnails">
                                        <a class="thumbnail" href="{{ image.popup }}" title="{{ heading_title }}">
                                            <img src="{{ image.thumb }}" title="{{ heading_title }}"
                                                 alt="{{ heading_title }}"/></a>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>

                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-md-12 col-sm-12 col-lg-7 border-left">
                <div class="row border-bottom p-4">
                    <div class="col-10 product-title">
                        <h4>{{ heading_title }}</h4>


                        {% if review_status %}
                            <div class="star-rating d-inline-block mr-2 rating">
                                {% for i in 1..5 %}
                                    {% if rating < i %}<span class="fa fa-stack" style="width: 1em;"><i
                                                class="fa fa-star-o fa-stack-1x"></i></span>{% else %}<span
                                            class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i
                                                class="fa fa-star-o fa-stack-1x"></i></span>{% endif %}
                                {% endfor %}
                            </div>
                        {% endif %}







                        <div class="rating-details d-inline-block"><span
                                    style="color: #BBB7B7; font-size: 0.8125rem;"
                                    class="mr-2">( 4.8 )</span>
                            <a href=""
                               onclick="$('a[href=\'#tab-review\']').trigger('click'); return false;"><span
                                        style="color: #F15A29; font-size: 0.8125rem;">{{ reviews }}</span></a></div>
                    </div>
                    <div class="col-2 wish-list text-right">
                        <div class="wish-list" style="color: #8D8D8D; font-size: 20px;">
                            <button type="button" data-toggle="tooltip" class="btn btn-default"
                                    title="{{ button_wishlist }}" onclick="wishlist.add('{{ product_id }}');"><i
                                        class="fa fa-heart"></i></button>
                        </div>
                    </div>
                </div>

                <div class="row justify-content-between p-4">
                    <!--<div class="product-price px-2"><span class="text-accent">$54.25</span>
                        <del>500</del>
                    </div>-->
                    {% if price %}
                        <ul class="product-price px-2">
                            {% if not special %}
                                <span class="text-accent">
                                    {{ price }}
                                </span>
                            {% else %}
                                <li><span style="text-decoration: line-through;">{{ price }}</span></li>
                                <li>
                                    <h2>{{ special }}</h2>
                                </li>
                            {% endif %}
                            {% if tax %}
                                <li>{{ text_tax }} {{ tax }}</li>
                            {% endif %}
                            {% if points %}
                                <li>{{ text_points }} {{ points }}</li>
                            {% endif %}
                            {% if discounts %}
                                {% for discount in discounts %}
                                    <li>{{ discount.quantity }}{{ text_discount }}{{ discount.price }}</li>
                                {% endfor %}
                            {% endif %}
                        </ul>
                    {% endif %}

                    <div class="delivery"><span class="" style="color: #BBB7B7; font-size: 0.8125rem;">Delivered in 7 - 11 days</span>
                    </div>
                </div>
                <div class="row px-3">
                    <div class="col-6">
                        <div class="product-size">
