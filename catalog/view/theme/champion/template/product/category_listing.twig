{{ header }}
<div id="more-categories">
<div class="container">
    <h3 class="mt-4 mb-4 font-weight-600 text-center ">Shop by Category</h3>
<div class="row mt-4">
    {% for category in categories %}
    <div class="col-md-3 mb-4">

                    <div class="text-center border">
                        <a href="{{ category.href }}">
                        {% if category.image %}
                        <img src="{{ category.image }}" width="100" height="100">
                        {% else %}
                            <img src="catalog/view/theme/champion/image/image-regular.svg" width="100" height="100">
                            {% endif %}
                        <div class="card-body">
                           {{ category.name }}
                        </div>
                        </a>
                    </div>

    </div>
    {% endfor %}
</div>
</div>
</div>

{{ footer }}
